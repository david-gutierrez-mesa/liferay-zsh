function updateGitLiferay() {
  local use_DXP="false"
  while [ "$1" != "" ]; do
    case $1 in
    -h | -help)
      _showHelp "$0"
      return 0
      ;;
    -dxp)
      shift
      use_DXP="true"
      ;;
    *)
      echo "Invalid option"
      _showHelp "$0"
      return 0
      ;;
    esac
    shift
  done

  if [ "$use_DXP" = "true" ]; then
    cd $PATH_TO_DXP_PORTAL/
  else
    cd $PATH_TO_PORTAL/
  fi

  gitClean && gitMaster &&
  gitCleanxdf &&
  git fetch upstream master &&
  git pull upstream master &&
  git push origin head

}

_showHelp() {
  echo "Function help:"
  echo "$1 [options]"
  echo " "
  echo "options:"
  echo "-h | -help,     Show brief help"
  echo "-dxp,           Update DXP repo instead of CE one"
}

updateGitLiferay "$@"