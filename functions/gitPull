function gitPull() {
    while [ "$1" != "" ]; do
    case $1 in
    -h | -help)
      _showHelp "$0"
      return 0
      ;;
    *)
      echo "Invalid option"
      _showHelp "$0"
      return 0
      ;;
    esac
    shift
  done
  git pull
  git remote update
}

_showHelp() {
  echo "Function help:"
  echo "This function runs:"
  echo "  git pull "
  echo "$1 [options]"
  echo " "
  echo "options:"
  echo "-h | -help,       Show brief help"
}

gitMaster "$@"