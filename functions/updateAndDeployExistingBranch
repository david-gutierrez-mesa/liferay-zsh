function updateAndDeployExistingBranch() {
  local use_DXP="false"
  while [ "$1" != "" ]; do
    case $1 in
    -h | -help)
      _showHelp "$0"
      return 0
      ;;
    -dxp)
      shift
      use_DXP="true"
      ;;
    *)
      echo "Invalid option"
      _showHelp "$0"
      return 0
      ;;
    esac
    shift
  done

  if [ "use_DXP" = "false" ]; then
    updateGitLiferay
  else
    updateGitLiferay  -dxp
  fi

  git checkout $1
  git rebase upstream/master

  if [ "use_DXP" = "false" ]; then
    mountBundle
  else
    mountBundle  -dxp
  fi

  startLiferay

}

_showHelp() {
  echo "Function help:"
  echo "$1 [options]"
  echo " "
  echo "options:"
  echo "-h | -help,     Show brief help"
  echo "-dxp,           Use DXP bundle instead of CE one"
}

updateAndDeployExistingBranch "$@"