#alias poshiValidation="ant -f build-test.xml run-poshi-validation"
function poshiValidation() {
  while [ "$1" != "" ]; do
    case $1 in
    -h | -help)
      _showHelp "$0"
      return 0
      ;;
    *)
      echo "Invalid option"
      _showHelp "$0"
      return 0
      ;;
    esac
    shift
  done

  if isThisALiferayRepo; then
    ant -f build-test.xml run-poshi-validation
  else
     echo "This is not a liferay-portal. Skipping Poshi Source Formatter"
  fi
}

_showHelp() {
  echo "Function help:"
  echo "$1 [options]"
  echo " "
  echo "options:"
  echo "-h | -help,           Show brief help"
}

poshiValidation "$@"