function deployLiferay() {
  local updateGitArguments=""
  local mountBundleArguments=""
  while [ "$1" != "" ]; do
    case $1 in
    -h | -help)
      _showHelp "$0"
      return 0
      ;;
    -dxp)
      updateGitArguments="${updateGitArguments} -dxp"
      mountBundleArguments="${mountBundleArguments} -dxp"
      ;;
    -hsql)
      mountBundleArguments="${mountBundleArguments} -hsql"
      ;;
    -u)
      mountBundleArguments="${mountBundleArguments} -u"
      ;;
    -ss | skipStartLiferay)
      mountBundleArguments="${mountBundleArguments} -ss"
      ;;
    *)
      echo "Invalid option"
      _showHelp "$0"
      return 0
      ;;
    esac
    shift
  done

  updateGitLiferay "${updateGitArguments}" || return 1
  mountBundle "${mountBundleArguments}" || return 1

}

_showHelp() {
  echo "Function help:"
  echo "$1 [options]"
  echo " "
  echo "options:"
  echo "-h | -help,               Show brief help"
  echo "-dxp,                     Mount DXP bundle instead of CE one"
  echo "-hsql,                    Use hsql data base instead of MySQL"
  echo "-u,                       Update exiting mounted bundle"
  echo "-ss | skipStartLiferay,   Skip start Liferay after mount the bundle"
}

deployLiferay "$@"