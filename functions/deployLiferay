function deployLiferay() {
  local deploy_DXP="false"
  while [ "$1" != "" ]; do
    case $1 in
    -h | -help)
      _showHelp "$0"
      return 0
      ;;
    -dxp)
      deploy_DXP="true"
      ;;
    esac
    shift
  done

  if [ "$deploy_DXP" = "false" ]; then
    updateGitLiferay -sgc || return 1
  else
    updateGitLiferay -sgc -dxp || return 1
  fi

  mountBundle -sgc "$@" || return 1

}

_showHelp() {
  echo "Function help:"
  echo "$1 [options]"
  echo " "
  echo "options:"
  echo "-h | -help,               Show brief help"
  echo "-dxp,                     Mount DXP bundle instead of CE one"
  echo "-hsql,                    Use hsql data base instead of MySQL"
  echo "-u,                       Update exiting mounted bundle"
  echo "-ss | skipStartLiferay,   Skip start Liferay after mount the bundle"
}

deployLiferay "$@"