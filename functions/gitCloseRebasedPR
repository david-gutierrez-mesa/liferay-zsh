function gitCloseRebasedPR() {
  local PR_TO_CLOSE
  local PR_REBASED

  while [ "$1" != "" ]; do
    case $1 in
    -h | -help)
      _showHelp "$0"
      return 0
      ;;
    -prtc)
      shift
      PR_TO_CLOSE="$1"
      ;;
    -prrb)
      shift
      PR_REBASED="$1"
      ;;
    -u)
      shift
      username="$1"
      ;;
    *)
      echo "Invalid option"
      _showHelp "$0"
      return 0
      ;;
    esac
    shift
  done

  if [[ -z "$PR_TO_CLOSE" ]] || [[ -z "$PR_REBASED" ]]; then
    echo "Enter a PR number to be closed and a PR to comment the rebase"
    echo " "
    _showHelp "$0"
  else
    local FROM_USER
    if [ -z "$username" ]; then
      FROM_USER=$GITHUB_USER
    else
      FROM_USER=$username
    fi
    gh pr close "$PR_TO_CLOSE" --repo "$FROM_USER"/"$REPO" || {
      echo "Impossible close PR $PR_REBASED"
      return
    }
    gh pr comment "$PR_TO_CLOSE" --repo "$FROM_USER"/"$REPO" --body "Rebased. See $PR_REBASED"
  fi
}

_showHelp() {
  echo "Function help:"
  echo "$1 [options]"
  echo " "
  echo "options:"
  echo "-h | -help,           Show brief help"
  echo "-prtc,                Pull request to be closed. Mandatory"
  echo "-prrb,                Pull request rebased. Mandatory"
  echo "-u,                   User to get the PR from. If not set then $GITHUB_USER is used "
}

gitCloseRebasedPR "$@"