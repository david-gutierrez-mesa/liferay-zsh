function gitCheckoutAndRebase() {
 if [ -z "$1" ]; then
    echo "Add a branch to checkout"
    echo " "
    return 0
  fi
  local branch=$1
  shift

  local stashPop="true"
  while [ "$1" != "" ]; do
    case $1 in
    -h | -help)
      _showHelp "$0"
      return 0
      ;;
    -ssp | -skipStashPop)
      shift
      stashPop="false"
      ;;
    *)
      echo "Invalid option"
      _showHelp "$0"
      return 0
      ;;
    esac
    shift
  done


  git checkout "$branch" &&
  gitRebase &&
  if [ "$stashPop" = "true" ]; then
    echo "Performing stash pop"
    git stash pop
  fi
}

_showHelp() {
  echo "Function help:"
  echo "$1 [options]"
  echo " "
  echo "options:"
  echo "-h | -help,           Show brief help"
  echo "-ssp | -skipStashPop, Don't perform stash pop after checkout and rebase"
}

gitCheckoutAndRebase "$@"